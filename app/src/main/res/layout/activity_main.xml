<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">
    <android.support.design.widget.TabLayout
        android:id="@+id/tabsOne"
        app:tabMode="scrollable"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <android.support.design.widget.TabLayout
        android:id="@+id/tabsTwo"
        app:tabMode="scrollable"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <android.support.design.widget.TabLayout
        android:id="@+id/tabsThree"
        app:tabMode="fixed"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <com.vitas.cn.tab.XTabLayout
        android:id="@+id/tabsFour"
        app:x_tabMode="scrollable"
        app:x_tabIndicatorAnimation="true"
        app:x_tabIndicatorHeight="0dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <com.vitas.cn.tab.XTabLayout
        android:id="@+id/tabsFive"
        app:x_tabMode="scrollable"
        android:layout_marginTop="15dp"
        app:x_tabIndicatorAnimation="false"
        app:x_tabIndicatorRoundRect="true"
        app:x_tabSelectedTextColor="@color/colorPrimary"
        app:x_tabIndicatorColor="@color/colorPrimaryDark"
        app:x_tabTextColor="@color/colorAccent"
        android:layout_width="match_parent"
        app:x_tabIndicatorWidth="20dp"
        app:x_tabTextSize="12sp"
        android:layout_height="45dp"/>

    <android.support.v4.view.ViewPager
        android:id="@+id/viewPager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>





</LinearLayout>